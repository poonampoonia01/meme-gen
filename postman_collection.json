{
  "info": {
    "name": "Meme Coin Aggregator API",
    "description": "Real-time meme coin data aggregation service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        },
        "description": "Check API health and Redis connection status"
      }
    },
    {
      "name": "Get All Tokens (Default)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens"]
        },
        "description": "Get paginated list of tokens with default settings (20 tokens)"
      }
    },
    {
      "name": "Get Tokens - Sort by Volume",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens?sortBy=volume&sortOrder=desc&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens"],
          "query": [
            {
              "key": "sortBy",
              "value": "volume"
            },
            {
              "key": "sortOrder",
              "value": "desc"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "Get top 10 tokens sorted by volume (descending)"
      }
    },
    {
      "name": "Get Tokens - Sort by Price Change",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens?sortBy=price_change&sortOrder=desc&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens"],
          "query": [
            {
              "key": "sortBy",
              "value": "price_change"
            },
            {
              "key": "sortOrder",
              "value": "desc"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "Get top 10 tokens with highest price change"
      }
    },
    {
      "name": "Get Tokens - Sort by Market Cap",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens?sortBy=market_cap&sortOrder=desc&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens"],
          "query": [
            {
              "key": "sortBy",
              "value": "market_cap"
            },
            {
              "key": "sortOrder",
              "value": "desc"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "Get top 10 tokens by market cap"
      }
    },
    {
      "name": "Get Tokens - Sort by Liquidity",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens?sortBy=liquidity&sortOrder=desc&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens"],
          "query": [
            {
              "key": "sortBy",
              "value": "liquidity"
            },
            {
              "key": "sortOrder",
              "value": "desc"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "Get top 10 tokens by liquidity"
      }
    },
    {
      "name": "Get Tokens - Pagination Page 1",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens?limit=5&cursor=0",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens"],
          "query": [
            {
              "key": "limit",
              "value": "5"
            },
            {
              "key": "cursor",
              "value": "0"
            }
          ]
        },
        "description": "Get first page (5 tokens)"
      }
    },
    {
      "name": "Get Tokens - Pagination Page 2",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens?limit=5&cursor=5",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens"],
          "query": [
            {
              "key": "limit",
              "value": "5"
            },
            {
              "key": "cursor",
              "value": "5"
            }
          ]
        },
        "description": "Get second page (next 5 tokens)"
      }
    },
    {
      "name": "Get Token by Address - USDC",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens/EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens", "EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v"]
        },
        "description": "Get USDC token details by address"
      }
    },
    {
      "name": "Get Token by Address - Invalid",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens/invalid-address-123",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens", "invalid-address-123"]
        },
        "description": "Test 404 response for invalid token address"
      }
    },
    {
      "name": "Refresh Cache",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tokens/refresh",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tokens", "refresh"]
        },
        "description": "Manually trigger cache refresh"
      }
    },
    {
      "name": "API Root",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        },
        "description": "Get API information and available endpoints"
      }
    }
  ]
}

